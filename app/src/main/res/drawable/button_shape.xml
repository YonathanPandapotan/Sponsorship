<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp"/>
            <solid android:color="@color/MainBlue"/>
            <stroke android:color="@color/blackFont"
                android:width="1dp"/>
            <size android:width="160dp"
                android:height="20dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp"/>
            <solid android:color="@color/LessWhiteBlue"/>
            <stroke android:color="@color/blackFont"
                android:width="1dp"/>
            <size android:width="160dp"
                android:height="20dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp"/>
            <solid android:color="@color/LessWhiteBlue"/>
            <stroke android:color="@color/moreBlackFont"
                android:width="1dp"/>
        </shape>
    </item>

</selector>